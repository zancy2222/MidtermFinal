@{
    ViewData["Title"] = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact Us - Barrier Busters Philippines</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
        }

        .navbar-custom {
            background-color: #538392;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #B3E2A7;
            }

            .navbar-custom .btn-primary {
                background-color: #6295A2;
                border-color: #6295A2;
            }

        .contact-section {
            padding: 50px 0;
        }

            .contact-section h1 {
                color: #333;
                font-size: 2rem;
                margin-bottom: 30px;
            }

            .contact-section .form-group label {
                color: #333;
            }

            .contact-section .form-control {
                border-radius: 5px;
            }

            .contact-section .btn-primary {
                background-color: #6295A2;
                border-color: #6295A2;
                transition: background-color 0.3s ease;
            }

                .contact-section .btn-primary:hover {
                    background-color: #507780;
                    border-color: #507780;
                }

        .contact-info {
            margin-top: 30px;
        }

            .contact-info h2 {
                color: #538392;
                font-size: 1.75rem;
                margin-bottom: 20px;
            }

            .contact-info p {
                font-size: 1rem;
                margin-bottom: 10px;
            }

        .map-section {
            margin-top: 30px;
        }

            .map-section iframe {
                border: none;
                border-radius: 10px;
            }

        .footer {
            background-color: #538392;
            color: #B3E2A7;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom">
        <a class="navbar-brand font-weight-bold" href="#">Barrier Busters Philippines</a>
        <div class="collapse navbar-collapse justify-content-center">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/Home/Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/Trips">Trips</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/Contact">Contact</a></li>
            </ul>
        </div>
        <a class="btn btn-primary ml-auto" href="/Home/Signup">Sign Up</a>
    </nav>

    <div class="container contact-section">
        <h1 class="text-center">Get in Touch</h1>

        <div class="row">
            <div class="col-md-6">
                <h2>Contact Form</h2>
                <form>
                    <div class="form-group">
                        <label for="name">Full Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Your Name" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" class="form-control" id="email" placeholder="Your Email" required />
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea class="form-control" id="message" rows="5" placeholder="Your Message" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>

            <div class="col-md-6 contact-info">
                <h2>Contact Information</h2>
                <p><strong>Address:</strong> 1234 Travel Street, Manila, Philippines</p>
                <p><strong>Phone:</strong> +63 123 4567 890</p>
                <p><strong>Email:</strong> contact@barrierbusters.ph</p>
            </div>
        </div>

        <div class="map-section mt-5">
            <h2 class="text-center">Find Us Here</h2>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d11910.556220396184!2d120.9822378!3d14.5827064!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3397c7bb9fef873d%3A0x62c1cbb2e6c6ab8!2sUniversity%20of%20the%20Philippines%2C%20Diliman!5e0!3m2!1sen!2sph!4v1689132063485!5m2!1sen!2sph" width="100%" height="300" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>

    <div class="footer">
        <p>&copy; 2024 Barrier Busters Philippines. All rights reserved.</p>
    </div>
</body>
</html>
