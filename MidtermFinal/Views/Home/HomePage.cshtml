@{
    ViewData["Title"] = "Landing Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Landing Page - Barrier Busters Philippines</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
        }

        .navbar-custom {
            background-color: #538392;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #B3E2A7;
            }

            .navbar-custom .btn-primary {
                background-color: #6295A2;
                border-color: #6295A2;
            }

        .hero-section {
            background: url('/images/bgg.gif') no-repeat center center;
            background-size: cover;
            height: 600px;
            color: white;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .hero-section h1 {
                font-size: 3rem;
                font-weight: bold;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            }

            .hero-section p {
                font-size: 1.25rem;
                margin-bottom: 20px;
            }

        .content-section {
            padding: 50px 0;
            text-align: center;
        }

            .content-section h2 {
                color: #538392;
                font-size: 1.75rem;
                margin-bottom: 20px;
            }

            .content-section p {
                font-size: 1rem;
                margin-bottom: 20px;
            }

            .content-section img {
                border-radius: 10px;
                transition: transform 0.3s ease, box-shadow 0.3s ease;
            }

                .content-section img:hover {
                    transform: scale(1.05);
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                }

        .footer {
            background-color: #538392;
            color: #B3E2A7;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom">
        <a class="navbar-brand font-weight-bold" href="#">Barrier Busters Philippines</a>
        <div class="collapse navbar-collapse justify-content-center">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/Home/HomePage">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/Trips">Trips</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/Contact">Contact</a></li>
            </ul>
        </div>
        <a class="btn btn-primary ml-auto" href="/Home/Login">Log out</a>
    </nav>

    <div class="hero-section">
        <h1>Welcome to Barrier Busters Philippines</h1>
        <p>Discover amazing travel experiences with us</p>
    </div>

    <div class="container content-section">
        <div class="row">
            <div class="col-md-4">
                <img src="https://via.placeholder.com/350x250" class="img-fluid mb-3" alt="Exciting Trips">
                <h2>Exciting Trips</h2>
                <p>Explore a variety of travel destinations tailored to your preferences. From mountains to beaches, we have it all.</p>
            </div>
            <div class="col-md-4">
                <img src="https://via.placeholder.com/350x250" class="img-fluid mb-3" alt="Adventure Awaits">
                <h2>Adventure Awaits</h2>
                <p>Join our adventure tours and experience the thrill of outdoor activities. Perfect for adventure enthusiasts.</p>
            </div>
            <div class="col-md-4">
                <img src="https://via.placeholder.com/350x250" class="img-fluid mb-3" alt="Discover New Places">
                <h2>Discover New Places</h2>
                <p>Discover hidden gems and local secrets. Our guides will take you to places you never knew existed.</p>
            </div>
        </div>
    </div>

    <div class="footer">
        <p>&copy; 2024 Barrier Busters Philippines. All rights reserved.</p>
    </div>
</body>
</html>
